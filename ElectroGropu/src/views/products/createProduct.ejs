<%- include("../partials/head.ejs")%>
  <body class="home__body">

    <%- include("../partials/header.ejs")%>
 
    <main>
        <section class="section-create-product">
            <form action="" class="form-create-product" method="post" enctype="multipart/form-data">
                <div class="container-create-product">
                    <label for="titulo"> Ingrese el nombre del producto</label>
                    <input type="text" name="titulo" id="titulo" class="column">
                    <p style="display:none; color:red; font-weight: bold;" id="ErrorName">casa</p>
                </div>
                <div class="container-create-product">
                    <label for="nombre" > Ingrese la marca del producto</label>                    
                    <select name="brand" id="brand">
                        <% brands.forEach(brand => {  %>
                            <option value="<%= brand.id %>"><%= brand.name %></option>                    
                        <% }); %>
                    </select>
                </div>
                <div class="container-create-product">
                    <label for="descripcion" style="margin-bottom: 5vh;">Agregar especificaci√≥n</label>
                    <a class="add-button" id="add-property"> Agregar + </a>
                    <div id="container-add-inputs"> </div>
                </div>
                
                <div class="container-create-product">
                    <label for="imagen" >Selecciona una imagen para el producto</label>
                    <input type="file" name="imagen" id="imagen" class="column" accept="image/png, image/jpeg, , image/jpg, , image/gif"  multiple></input>
                </div>
            
                <div class="container-create-product">
                    <label for="price">Precio</label>
                    <input type="number" name="price" id="price" placeholder="$" min=0 class="column">
                    <p style="display:none;color:red; font-weight: bold; "  id="ErrorPrice" >casa</p>
                </div>
    
                <div class="botons_createProduct">
                    <button type="reset">Borrar</button>
                    <button type="submit">Crear</button>
                </div>
            </form>
        </section>
        <script src="/js/createProduct.js"></script>
    </main>
  </body>
</html>