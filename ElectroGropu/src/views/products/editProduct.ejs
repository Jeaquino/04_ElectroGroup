<%- include("../partials/head.ejs")%>

    <body class="home__body">

        <%- include("../partials/header.ejs")%>

            <main class="edit_product">
                <form class="form-editProduct" action="/products/editProduct/<%= product.id%>?_method=PUT" method="POST"
                    enctype="multipart/form-data">
                    <div class="div-input-edicion">
                        <label class="label-editP" for="titulo">Nombre Producto</label>
                        <input class="input-edicion" type="text" name="titulo" value="<%= db.product.name%>">
                    </div>
                    <div class="div-input-edicion">
                        <label class="label-editP" for="brand">Marca del Producto</label>
                        <input class="input-edicion" type="text" name="brand" value="<%= db.brand%>">
                    </div>
                    <div class="description">
                        <textarea name="description" ><%= db.description%></textarea>.
                        </div>
                    <div class="div-input-edicion">
                        <label class="label-editP" for="image"></label>
                        <input class="input-edicion" type="file" name="images" id="imagen"
                            value="<%= db.image%>" multiple>
                    </div>
                    <div class="precio_edicion">
                        <label class="label-editP" for="brand">Marca del Producto</label>
                        <input class="input-edicion" type="text" name="brand" value="<%= db.product.brand%>">
                    </div>
                    <div class="precio_edicion">
                        <label class="label-editP" for="price">Precio del Producto</label>
                        <input class="input-edicion" type="text" name="price" value="<%= db.product.price%>">
                    </div>
                    <div class="boton_edit">
                        <button class="boton_edit_a" type="submit"> Guardar Cambios</button>
                    </div>
                </form>
            </main>
            <%- include("../partials/footer.ejs")%>
    </body>

    </html>