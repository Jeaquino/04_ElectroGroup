<%- include("../partials/head.ejs")%>
<body class="home__body">

    <%- include("../partials/header.ejs")%>

    <main class="edit_product">
        <form class="form-editProduct" action="/products/editProduct/<%= product.id %>?_method=PUT" method="POST">
            <div class="div-input-edicion">
                <label class="label-editP" for="nombre" id="nombre">Nombre Producto</label>
                <input  class="input-edicion" type="text" name="titulo" value="<% product.name%>">
            </div>
            <div class="description">
                <textarea name="description" rows="20" cols="50" placeholder="<% product.descripcion%>" value="<% product.descripcion%>"></textarea>
            </div>
            <div class="div-input-edicion">
                <label class="label-editP" for="image" ></label>
                <input class="input-edicion"type="file" name="image" id="imagen" value="<% product.image%>">
            </div>
        
            <div class="precio_edicion">
                <label class="label-editP" for="price" >Precio del Producto</label>
                <input  class="input-edicion"type="text" name="price" >
            </div>
            <div class="boton_edit">
                <button class="boton_edit" type="submit"> Guardar Cambios</button>
            </div>
        </form>
    </main>
</body>
</html>