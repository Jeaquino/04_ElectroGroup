<%- include("../partials/head.ejs")%>

    <body class="body_general_registro">
        <%- include("../partials/header.ejs")%>


            <div class="copy_header_register">
                <h3>Crear tu cuenta ElectroGroup</h3>
            </div>


            <div class="cajagranderegister">
                <section class="main__register__form">


                    <form action="/users/register" method="post" class="register__form_general" enctype="multipart/form-data">

                        <div class="register ">
                            <label for="usuario">Ingrese Nombre</label>
                            <input type="text" name="usuario" id="placeholder"  value="<%= locals.old && old.name ? old.name : null %>" >
                            <p><%= locals.errores && errores.name ? errores.name.msg : null %> </p>
                            <div class="iconousuario">
                                <i class="fa-regular fa-circle-user" id="userIcon"></i>
                            </div>
                        </div>
                        <div class="register ">
                            <label for="">Ingrese un correo</label>
                            <input type="email" name="correo" id="placeholder"  value="<%= locals.old && old.correo ? old.correo : null %>" >
                            <p><%= locals.errores && errores.correo ? errores.correo.msg : null %> </p>
                            <div class="iconousuario">
                                <i class="fa-regular fa-envelope" id=""></i>
                            </div>
                        </div>
                        <div class="register ">
                            <label for="">Ingrese una contraseña</label>
                            <input type="password" name="contraseña" id="placeholder"
                            value="<%= locals.old && old.contraseña ? old.contraseña : null %>" >
                            <p><%= locals.errores && errores.contraseña ? errores.contraseña.msg : null %> </p>
                            <div class="iconousuario">
                                <i class="fa-regular fa-eye-slash" id=""></i>
                            </div>
                        </div>
                        <div class="register ">
                            <label for="">Confirme su contraseña</label>
                            <input type="password" name="contraseña" id="placeholder"  value="<%= locals.old && old.contraseñaB ? old.contraseñaB : null %>" >
                            <p><%= locals.errores && errores.contraseñaB ? errores.contraseñaB.msg : null %> </p>
                            <div class="iconousuario">
                                <i class="fa-solid fa-eye-slash" id=""></i>
                            </div>
                            <div class="imgAvatar">
                                <label for="avatar" class="avatar">Foto de perfil</label>
                                <input type="file" class="form-avatar" id="avatar2" name="avatar">
                                <p><%= locals.errores && errores.avatar ? errores.avatar.msg : null %> </p>
                            </div>

                        </div>
                        <div class="register__terminos-condiciones">
                            <input type="checkbox" name="terminos">
                            <label for="">Acepto terminos y condiciones</label>
                        </div>


                        <div class="register__buttom">

                            <button type="submit">Registrarme</button>


                            <h6>Registrarme con</h6>
                            <nav>
                                <ul class="redessocialesregsiter">
                                    <a href="https://google.com"><i class="fa-brands fa-google"></i></i></a>
                                    <a href="https://twitter.com"><i class="fa-brands fa-twitter"></i></i></a>
                                    <a href="https://facebook.com"><i class="fa-brands fa-facebook"></i></i></a>
                                </ul>
                            </nav>
                            <h5>¿ya tiene una cuenta? <a href="/users/login"> inicie sesión</a></h5>


                        </div>

                    </form>

                </section>
            </div>


            











            <div class="footer__productcart">

            </div>
            <%- include("../partials/footer.ejs")%>
    </body>

    </html>